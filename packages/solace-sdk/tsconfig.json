{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "moduleDetection": "force",
    "isolatedModules": true,

    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,

    "moduleResolution": "bundler",
    "module": "ESNext",
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "lib": ["es2022", "dom", "dom.iterable"],
  },
  "include": ["./src/**/*.ts"]
}
